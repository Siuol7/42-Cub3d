mlx42:
	@ if [ ! -d "$(MLX42_DIR)" ]; then \
	    printf "\033[1;33mMLX\033[1;32m ðŸ’» Setting upâ€¦\n"; \
	    git clone https://github.com/codam-coding-college/MLX42.git $(MLX42_DIR) > /dev/null 2>&1; \
	    mkdir -p $(MLX42_DIR)/build; \
	    ( \
	      cd $(MLX42_DIR)/build && \
	      cmake .. > /dev/null 2>&1 && \
	      cmake --build . -j4 > /dev/null 2>&1 \
	    ); \
	    rm -rf $(MLX42_DIR)/.git; \
	fi
